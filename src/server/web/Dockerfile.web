FROM node:20.19.4-alpine
# Install build tools for node-gyp and libxml2-utils for xmllint
RUN apk add --update make g++ linux-headers python3 libxml2-utils
# Install Chrome for web tests
RUN apk add --no-cache chromium chromium-chromedriver
# Set environment variables for Chrome
ENV CHROMIUM_PATH=/usr/bin/chromium-browser
ENV CHROME_BIN=/usr/bin/chromium-browser
ENV PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
ENV PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

WORKDIR /workspace
COPY package*.json ./
RUN npm install --legacy-peer-deps
# Install ts-node to run TypeScript files
# RUN npm install -g ts-node typescript
# COPY . .

# We don't need to start Chrome here since we'll use the shared chromium service
# Set environment variables to point to the chromium service
ENV CHROME_HOST=chromium
ENV CHROME_PORT=9222
ENV WS_PORT=8080
