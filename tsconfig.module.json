{
  "ts-node": {
    "compilerOptions": {
      "module": "esnext"
    }
  },
  "declaration": true,
  "compilerOptions": {
    "useDefineForClassFields": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es2017",
    "allowJs": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "incremental": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": false,
    "outDir": "dist/module/",
    "alwaysStrict": true
  },
  "include": [
    "src/**/*.*ts",
    "src/**/*.*tsx",
    "index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "src/Report.tsx"
  ]
}