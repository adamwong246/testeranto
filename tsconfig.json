{
  "ts-node": {
    "compilerOptions": {
      "module": "esnext",
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "target": "es2020",
      "esModuleInterop": true,
    }
  },
  "declaration": true,
  "compilerOptions": {
    "useDefineForClassFields": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "ES2022",
    "allowJs": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "incremental": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "outDir": "dist",
    "alwaysStrict": true
  },
  "include": [
    "./node_modules/testeranto/src/**/*.*ts",
    "./**/*.*ts",
    "./**/*.*tsx",
    "index.d.ts",
    "src/build-tests.ts",
    "run-tests.ts",
    "testeranto.ts",
  ],
  "exclude": [
    "node_modules",
    "trash"
  ]
}